	//Ler o potenciometro e salvar o valor da distancia dos sensores



	//Definir o offset de leitura Thrshold

	//Inicializar os sensores
	lcd_init ();

	HAL_ADC_Start(&hadc1);

	while(start == 0){

		GetDistanceSensor(&hadc1);
	}
	ConfigAndStartSensor();

}

